pipeline {
  agent {
    docker {
      image 'ubuntu:latest'
      args '-u root'
    }
  }
  stages {
    stage('Install Node.js and npm') {
      steps {
        sh '''
          apt-get update
          apt-get install -y curl
          curl -fsSL https://deb.nodesource.com/setup_20.x | bash -
          apt-get install -y nodejs
        '''
      }
    }
    stage('Verify Installation') {
      steps {
        sh '''
          node -v
          npm -v
        '''
      }
    }
  }
}
